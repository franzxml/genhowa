<IfModule mod_rewrite.c>
    # Mengaktifkan Rewrite Engine
    RewriteEngine On

    # Mencegah orang melihat isi direktori (Options -Indexes)
    # Ini membuat tampilan "Forbidden" jika tidak ada index file, alih-alih list file
    Options -Indexes

    # Aturan 1: Arahkan root domain (kosong) ke folder public
    RewriteRule ^$ public/ [L]

    # Aturan 2: Arahkan semua request lainnya ke folder public
    # $1 mengambil semua karakter setelah nama domain
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>